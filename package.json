{
  "name": "daniu-lint",
  "version": "1.0.0",
  "description": "Daniu Lint Configs",
  "author": "ku800",
  "private": true,
  "_moduleAliases": {
    "@root": "."
  },
  "scripts": {
    "check": "npm run test && npm run eslint",
    "eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore .",
    "stylelint": "stylelint src/**/*.{css,scss,sass}",
    "lint": "yarn run eslint && yarn run stylelint",
    "lint:fix": "yarn run eslint --fix && yarn run stylelint --fix",
    "test": "jest --clearCache && jest --runInBand --detectOpenHandles"
  },
  "typings": "types/index.d.ts",
  "lint-staged": {
    "*.{ts,js}": "eslint",
    "*.{css}": "stylelint",
    "": ""
  },
  "dependencies": {
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nock": "^13.0.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  }
}
